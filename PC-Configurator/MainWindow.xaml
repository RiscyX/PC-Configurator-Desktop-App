<Window x:Class="PC_Configurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_Configurator"
        mc:Ignorable="d"
        Title="Számítógép Konfigurátor" Height="450" Width="600"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="30" VerticalAlignment="Center">
            <!-- Alkalmazás címe -->
            <TextBlock Text="Számítógép Konfigurátor"
                       FontSize="28" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Gombok rácsban elrendezve -->
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Regisztráció gomb -->
                <Button Grid.Column="0"
                        Name="btnRegister" Content="Regisztráció"
                        Width="200" Height="60"
                        Click="BtnRegister_Click"
                        Background="#4A90E2" Foreground="White"
                        FontSize="22" FontWeight="Bold" Padding="16" BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Bejelentkezés gomb -->
                <Button Grid.Column="1"
                        Name="btnLogin" Content="Bejelentkezés"
                        Width="200" Height="60"
                        Margin="16,0,0,0"
                        Click="BtnLogin_Click"
                        Background="#50E3C2" Foreground="White"
                        FontSize="22" FontWeight="Bold" Padding="16" BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
