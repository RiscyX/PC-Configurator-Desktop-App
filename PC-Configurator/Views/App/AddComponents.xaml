<UserControl x:Class="PC_Configurator.Views.App.AddComponents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_Configurator.Views.App"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#23272F" Margin="20,0,20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Width="320" Margin="0,0,32,0">
            <TextBlock Text="Alkatrészek hozzáadása" Foreground="#F5F6FA" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,40"/>
            <Button x:Name="AddCpuButton" Content="CPU hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddCpuButton_Click"/>
            <Button x:Name="AddGpuButton" Content="GPU hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddGpuButton_Click"/>
            <Button x:Name="AddMotherboardButton" Content="Alaplap hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddMotherboardButton_Click"/>
            <Button x:Name="AddRamButton" Content="RAM hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddRamButton_Click"/>
            <Button x:Name="AddStorageButton" Content="Meghajtó hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddStorageButton_Click"/>
            <Button x:Name="AddPsuButton" Content="Tápegység hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddPsuButton_Click"/>
            <Button x:Name="AddCaseButton" Content="Gépház hozzáadása" Height="60" FontSize="22" Padding="0,8,0,8" Background="#4A90E2" Foreground="#F5F6FA" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Margin="0,0,0,16" Click="AddCaseButton_Click"/>
        </StackPanel>
        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border MinWidth="900" MaxWidth="1100" Background="Transparent" Margin="0,0,64,0">
                <ContentControl x:Name="FormHost" Margin="0,0,120,0"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
