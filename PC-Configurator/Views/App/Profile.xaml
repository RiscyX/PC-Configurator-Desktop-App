<UserControl x:Class="PC_Configurator.Views.App.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_Configurator.Views.App"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Margin="0" >
            <TextBlock Text="Fiókom" Foreground="#F5F6FA" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>
            <TextBlock Text="Email cím:" Foreground="#50E3C2" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBlock x:Name="EmailTextBlock" Text="" Foreground="#F5F6FA" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
            <TextBlock Text="Szerepkör:" Foreground="#4A90E2" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <TextBlock x:Name="RoleTextBlock" Text="" Foreground="#F5F6FA" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
