<Window x:Class="PC_Configurator.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="700" Width="540"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <!-- Input styles -->
            <Style x:Key="DarkInputBox" TargetType="TextBox">
                <Setter Property="Background" Value="#1F1F1F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#555"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="CaretBrush" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#4A90E2"/>
                        <Setter Property="Background" Value="#2B2B2B"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!-- PasswordBox style -->
            <Style x:Key="DarkPasswordBox" TargetType="PasswordBox">
                <Setter Property="Background" Value="#1F1F1F"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#555"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Padding" Value="14,8"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="CaretBrush" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#4A90E2"/>
                        <Setter Property="Background" Value="#2B2B2B"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <!-- Checkbox style -->
            <Style x:Key="DarkCheckbox" TargetType="CheckBox">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="LightGray"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <DockPanel LastChildFill="True">
                                <Border x:Name="CheckBoxBorder"
                                        Width="18" Height="18"
                                        Background="#1F1F1F"
                                        BorderBrush="#777" BorderThickness="1"
                                        CornerRadius="3" Margin="0,0,8,0"
                                        VerticalAlignment="Center">
                                    <Viewbox Stretch="Uniform">
                                        <Path x:Name="CheckMark"
                                              Data="M 0 5 L 4 9 L 10 1"
                                              StrokeThickness="2"
                                              Stroke="White"
                                              Visibility="Collapsed" />
                                    </Viewbox>
                                </Border>
                                <ContentPresenter VerticalAlignment="Center" />
                            </DockPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="CheckBoxBorder" Property="Background" Value="#4A90E2"/>
                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#4A90E2"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#50E3C2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <!-- Link button style moved to App.xaml for global use -->
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#23272F" CornerRadius="16" Padding="32" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Regisztráció" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,18"/>

            <TextBlock Text="Email cím:" FontSize="18" Margin="0,0,0,6"/>
            <TextBox Name="EmailTextBox" Height="48" Style="{StaticResource DarkInputBox}" Margin="0,0,0,16"/>

            <TextBlock Text="Jelszó:" FontSize="18" Margin="0,10,0,6"/>
            <Grid Margin="0,0,0,16">
                <PasswordBox Name="PasswordBox" Height="48" Style="{StaticResource DarkPasswordBox}"/>
                <TextBox Name="PasswordTextBox" Height="48" Style="{StaticResource DarkInputBox}" Visibility="Collapsed"/>
            </Grid>

            <TextBlock Text="Jelszó megerősítése:" FontSize="18" Margin="0,10,0,6"/>
            <Grid Margin="0,0,0,16">
                <PasswordBox Name="ConfirmPasswordBox" Height="48" Style="{StaticResource DarkPasswordBox}"/>
                <TextBox Name="ConfirmPasswordTextBox" Height="48" Style="{StaticResource DarkInputBox}" Visibility="Collapsed"/>
            </Grid>

            <CheckBox Name="ShowPasswordCheckBox" Content="Jelszó megjelenítése"
                      Style="{StaticResource DarkCheckbox}"
                      Checked="ShowPasswordCheckBox_Checked"
                      Unchecked="ShowPasswordCheckBox_Unchecked"/>

            <Button Content="Regisztráció"
                    Width="220" Height="60" Margin="0,18,0,0"
                    Background="#4A90E2" Foreground="White"
                    FontSize="22" FontWeight="Bold"
                    BorderThickness="0" Cursor="Hand"
                    HorizontalAlignment="Center"
                    Click="RegisterButton_Click"/>

            <Button Content="Már van fiókom? Bejelentkezés"
                    Style="{StaticResource LinkButton}"
                    FontSize="18"
                    Click="BackToLoginButton_Click"/>
        </StackPanel>
    </Border>
</Window>
